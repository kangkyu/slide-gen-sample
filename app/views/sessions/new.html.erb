<div class="bg-gray-50 w-full">
  <div class="py-20 bg-white border-4 border-emerald-600">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <%= button_to google_auth_url,
            method: :post,
            data: { turbo: false },
            class: "inline-flex items-center bg-white text-gray-700 px-6 py-3 rounded-lg border-2 border-gray-600 hover:bg-gray-50 transition duration-300 shadow-sm" do %>
          <%= image_tag "google_logo.png", class: "w-5 h-5 mr-2", alt: "Google logo" %>
          <span class="font-semibold">Sign in with Google</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
