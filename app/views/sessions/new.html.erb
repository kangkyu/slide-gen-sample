<div class="flex items-center justify-center min-h-[calc(100vh-16rem)]">
  <div class="w-full max-w-sm">
    <h1 class="text-2xl font-semibold text-slate-900 mb-8 text-center">Sign in</h1>

    <%= button_to google_auth_url,
        method: :post,
        data: { turbo: false },
        class: "w-full flex items-center justify-center px-4 py-3 border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors" do %>
      <%= image_tag "google_logo.png", class: "w-5 h-5 mr-3", alt: "Google" %>
      <span class="text-slate-700">Continue with Google</span>
    <% end %>
  </div>
</div>
