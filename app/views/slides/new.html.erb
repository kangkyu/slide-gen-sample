<div class="w-full max-w-2xl p-8 bg-white rounded-lg shadow-md mx-auto">
  <div id="new_slide">
    <div class="bg-white">
  <%= form_with model: @slide, url: slides_path(@slide), method: :post, html: { class: "space-y-8" } do |f| %>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-8 hover:shadow-xl transition-shadow duration-300">

      <!-- URL Input Section -->
      <div class="max-w-2xl mx-auto">
        <div class="space-y-6">
          <!-- Presentation ID Field -->
          <div class="space-y-3">
            <div class="relative">
              <%= f.text_field :presentation_id, class: "block w-full rounded-lg shadow-sm text-base py-4 px-4 pr-12 #{@slide.errors[:presentation_id].any? ? 'border-2 border-red-300 text-red-900 placeholder-red-400 focus:outline-none focus:ring-red-500 focus:border-red-500 bg-red-50' : 'border-2 border-gray-200 focus:border-slate-500 focus:ring-slate-500 focus:ring-2'} transition-all duration-200 placeholder-gray-400", placeholder: "Google Slides File ID" %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
              </div>
            </div>
            <% if @slide.errors[:presentation_id].any? %>
              <div class="flex items-start gap-2 mt-2">
                <svg class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm text-red-600 font-medium"><%= @slide.errors[:presentation_id].join(', ') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center pt-4">
      <%= f.submit "Generate",
        class: "inline-flex items-center gap-2 px-8 py-4 border border-transparent text-base font-semibold rounded-lg shadow-lg text-white bg-gradient-to-r from-slate-600 to-slate-700 hover:from-slate-700 hover:to-slate-800 focus:outline-none focus:ring-4 focus:ring-slate-300 focus:ring-offset-2 transform hover:scale-105 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none",
        data: { disable_with: "Generating..." } %>
    </div>
  <% end %>
</div>

  </div>

  <div class="text-center mt-4">
    <%= link_to 'Back', slides_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
</div>
