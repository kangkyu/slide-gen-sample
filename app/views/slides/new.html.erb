<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <%= link_to "â† Back", slides_path, class: "text-slate-600 hover:text-slate-900" %>
  </div>

  <h1 class="text-2xl font-semibold text-slate-900 mb-6">Create New Slide</h1>

  <div id="new_slide">
    <%= form_with model: @slide, url: slides_path(@slide), method: :post do |f| %>
      <div class="space-y-4">
        <div>
          <label for="slide_presentation_id" class="block text-sm font-medium text-slate-700 mb-2">
            Presentation ID
          </label>
          <%= f.text_field :presentation_id,
              class: "block w-full px-3 py-2 border border-slate-300 rounded-lg focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500",
              placeholder: "Paste your Google Slides ID",
              autocomplete: "off" %>
          <% if @slide.errors[:presentation_id].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @slide.errors[:presentation_id].join(', ') %></p>
          <% end %>
        </div>

        <div class="flex gap-3">
          <%= f.submit "Generate", class: "px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors" %>
          <%= link_to "Cancel", slides_path, class: "px-4 py-2 border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
