<% if slide.failed? %>
  <div class="text-center py-8">
    <p class="text-red-600 mb-4">Processing failed</p>
    <%= link_to "Try Again", new_slide_path, class: "text-emerald-600 hover:text-emerald-700 underline" %>
  </div>
<% elsif slide.pending? %>
  <div class="text-center py-8">
    <p class="text-slate-600">Processing...</p>
  </div>
<% else %>
  <% if slide.presentation_id.present? %>
    <div class="space-y-4">
      <p class="text-emerald-600">Slide generated successfully</p>

      <div class="flex gap-3">
        <a href="<%= slide.presentation_url %>" target="_blank" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
          Open in Google Slides
        </a>
        <%= link_to "Create Another", new_slide_path, class: "px-4 py-2 border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors" %>
      </div>
    </div>
  <% end %>
<% end %>
