<div style="display: none;"><%= turbo_stream_from "slide_#{slide.id}" %></div>

<div id="slide_item_<%= slide.id %>" class="border border-slate-200 rounded-lg p-4">
  <div class="flex items-center justify-between mb-3">
    <div>
      <p class="text-sm text-slate-900 mb-1">
        <% if slide.presentation_id.present? %>
          <%= slide.presentation_id.truncate(20) %>
        <% else %>
          Slide
        <% end %>
      </p>
      <p class="text-xs text-slate-500"><%= time_ago_in_words(slide.created_at) %> ago</p>
    </div>
    <%= render "status_indicator", slide: slide %>
  </div>

  <div class="flex gap-2">
    <%= link_to "View", slide_path(slide), class: "text-sm text-emerald-600 hover:text-emerald-700" %>
    <%= link_to "Delete", slide, class: "text-sm text-red-600 hover:text-red-700",
        data: { turbo_method: :delete, turbo_confirm: "Delete this slide?" } %>
  </div>
</div>
