<%= turbo_stream_from "slide_#{slide.id}" %>

<div id="slide_item_<%= slide.id %>" class="bg-white border border-gray-200 rounded-lg p-6 mb-4 shadow-sm">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <p class="text-sm text-gray-500 mt-1">
        Created <%= time_ago_in_words(slide.created_at) %> ago
      </p>

      <!-- TODO: Status indicator using helper -->
    </div>

    <div class="ml-4 flex space-x-2">
      <%= link_to "View", slide_path(slide), class: "text-blue-600 hover:text-blue-800 text-sm" %>
      <%= link_to "Delete", slide,
        class: "text-red-600 hover:text-red-800 text-sm",
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
