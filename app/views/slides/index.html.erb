<div>
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-semibold text-slate-900">Slides</h1>
    <%= link_to "New Slide", new_slide_path, class: "px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors" %>
  </div>

  <div id="flash_messages"></div>

  <% if @slides.any? %>
    <div id="slides" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <%= render partial: "slide_item", collection: @slides, as: :slide %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-slate-500 mb-4">No slides yet</p>
      <%= link_to "Create your first slide", new_slide_path, class: "text-emerald-600 hover:text-emerald-700 underline" %>
    </div>
  <% end %>
</div>
