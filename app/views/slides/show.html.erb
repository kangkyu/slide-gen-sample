<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <%= link_to "â† Back", slides_path, class: "text-slate-600 hover:text-slate-900" %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Slide Details</h1>
      <p class="text-sm text-slate-500 mt-1">Created <%= time_ago_in_words(@slide.created_at) %> ago</p>
    </div>
    <div id="status_indicator_<%= @slide.id %>">
      <%= render "status_indicator", slide: @slide %>
    </div>
  </div>

  <%= turbo_frame_tag "flash_messages" do %>
    <%= render partial: "slides/error", locals: { error_message: "", status: @slide.status } %>
  <% end %>

  <div id="slide_<%= @slide.id %>" class="border border-slate-200 rounded-lg p-6">
    <% if @slide.presentation_id.present? %>
      <p class="text-sm text-slate-600 mb-6 font-mono"><%= @slide.presentation_id %></p>
    <% end %>

    <div id="content_status_<%= @slide.id %>">
      <%= render "content_status", slide: @slide %>
    </div>

    <div class="mt-6 pt-6 border-t border-slate-200">
      <%= link_to "Delete", @slide, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Delete this slide?" },
          class: "text-sm text-red-600 hover:text-red-700" %>
    </div>
  </div>
</div>

<%= turbo_stream_from "slide_#{@slide.id}" %>
